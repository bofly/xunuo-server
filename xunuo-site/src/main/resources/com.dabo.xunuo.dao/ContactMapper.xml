<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.dabo.xunuo.dao.ContactMapper">

    <sql id="TABLE">t_contact</sql>

    <resultMap id="DATA" type="com.dabo.xunuo.entity.Contact">
        <id property="id" column="id" />
        <result property="name" column="name"/>
        <result property="birthday" column="birthday"/>
        <result property="phone" column="phone"/>
        <result property="remark" column="remark"/>
        <result property="figureId" column="figure_id"/>
        <result property="contactTypeId" column="contact_type_id"/>
        <result property="headImg" column="head_img"/>
        <result property="updateTime" column="update_time"/>
        <result property="createTime" column="create_time"/>
    </resultMap>
    <!--新增-->
    <insert id="insert" useGeneratedKeys="true" keyColumn="id" keyProperty="entity.id">
        INSERT INTO
        <include refid="TABLE"/>
        (name,birthday,phone,remark,figure_id,contact_type_id,head_img,create_time,update_time)
        VALUES
        (#{entity.name},#{entity.birthday},#{entity.phone},#{entity.remark},#{entity.figureId},#{entity.contactTypeId},#{entity.headImg},#{entity.createTime},#{entity.updateTime})
    </insert>

    <insert id="update" parameterType="com.dabo.xunuo.entity.Contact">
        INSERT INTO
        <include refid="TABLE"/>
        (name,birthday,phone,remark,figure_id,contact_type_id,head_img,update_time)
        VALUES
        (#{entity.name},#{entity.birthday},
        #{entity.phone},#{entity.remark},#{entity.figureId},
        #{entity.contactTypeId},#{entity.headImg},#{entity.updateTime})
    </insert>

    <select id="getById" resultMap="DATA">
        SELECT *
        FROM <include refid="TABLE"/>
        WHERE id=#{keyId}
    </select>

    <update id="setUpdateTime">
        UPDATE <include refid="TABLE"/>
        SET update_time=#{updateTime}
        WHERE id=#{contactId}
    </update>

    <update id="setFigureId">
        UPDATE <include refid="TABLE"/>
        SET figure_id=#{figureId},update_time=#{updateTime}
        WHERE id=#{contactId}
    </update>

    <select id="countByType" resultType="Long">
        SELECT COUNT(*)
        FROM <include refid="TABLE"/>
        WHERE contact_type_id=#{typeId}
    </select>

    <delete id="delete">
        DELETE
        FROM <include refid="TABLE"/>
        WHERE id=#{keyId}
    </delete>
</mapper>