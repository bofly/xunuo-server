<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.dabo.xunuo.dao.UserMapper">

    <sql id="TABLE">t_user</sql>

    <resultMap id="DATA" type="com.dabo.xunuo.entity.User">
        <id property="id" column="id" />
        <result property="phone" column="phone"/>
        <result property="source" column="source"/>
        <result property="bindOpenId" column="bind_open_id"/>
        <result property="createTime" column="create_time"/>
    </resultMap>

    <!--新增-->
    <insert id="insert" useGeneratedKeys="true" keyColumn="id" keyProperty="entity.id">
        INSERT INTO
        <include refid="TABLE"/>
        (phone,create_time)
        VALUES
        (#{entity.phone},#{entity.createTime})
    </insert>

    <select id="getByPhone" resultMap="DATA">
        SELECT *
        FROM <include refid="TABLE"/>
        WHERE phone=#{phone}
    </select>

    <select id="getByOpenId" resultMap="DATA">
        SELECT *
        FROM <include refid="TABLE"/>
        WHERE source=#{source}
        AND bind_open_id=#{openId}
    </select>

</mapper>